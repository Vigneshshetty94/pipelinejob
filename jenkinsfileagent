pipeline {
        agent { label 'Slave2' }
        stages {
           agent { label 'master' }
           stage('BUILD') {
                steps {
                      sh 'echo this is my first pipeline job'
                      sh 'ls -lrt'
                     }
                  }
            stage('TEST') {
             agent { label 'Slave2' }
                steps {
                 sh '''
                      echo hello all
                       du -h
                    '''
                 }
             }

           stage('Deploy') {
                agent { label 'Slave2' }
                   steps {
                 sh 'echo code has been deployed'
                    }
                 }
        }
   }

