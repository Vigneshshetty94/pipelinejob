pipeline {
agent any
parameters {
		string(name: 'NAME', description: 'Enter your name')
                }
        stages {
           stage('BUILD') {
               agent {label 'master'}
                  steps {
                      echo "My name is ${params. 'NAME'}
                      sh 'ls -lrt'
                     }
                  }
            stage('TEST') {
             agent {label 'Slave2'}
                steps {
                 sh '''
                      echo hello all
                       du -h
                    '''
                 }
             }

           stage('Deploy') {
                agent {label 'Slave2'}
                   steps {
                 sh 'echo code has been deployed'
                    }
                 }
        }
   }

